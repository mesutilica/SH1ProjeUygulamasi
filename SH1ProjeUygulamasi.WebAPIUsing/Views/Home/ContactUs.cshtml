
@{
    ViewData["Title"] = "İletişim";
}

<h1 class="display-5 text-center">Bize Ulaşın</h1>

<div class="row justify-content-center">
    <div class="col-xl-12">
        <div class="card border-0 rounded-3 shadow-lg overflow-hidden">
            <div class="card-body p-0">
                <div class="row g-0">
                    <div class="col-sm-6 d-none d-sm-block bg-image">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48168.04575086402!2d28.87568114807429!3d41.014253200272826!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab989e5fae399%3A0x34f0847eed8b22e0!2zRmF0aWgvxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1758739746391!5m2!1str!2str" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                    <div class="col-sm-6 p-4">
                        <div class="text-center">
                            <div class="h3 fw-light">İletişim</div>
                            <p class="mb-4 text-muted">Formu doldurarak bize ulaşabilirsiniz</p>
                        </div>                       

                        <form id="contactForm" asp-action="ContactUs">

                            <!-- Name Input -->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="name" name="nameSurname" type="text" placeholder="Ad Soyad" data-sb-validations="required" required />
                                <label for="name">Ad Soyad</label>
                                <div class="invalid-feedback" data-sb-feedback="name:required">Ad gereklidir.</div>
                            </div>

                            <!-- Email Input -->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="emailAddress" name="email" type="email" placeholder="Email" data-sb-validations="required,email" required />
                                <label for="emailAddress">Email</label>
                                <div class="invalid-feedback" data-sb-feedback="emailAddress:required">Email gereklidir.</div>
                                <div class="invalid-feedback" data-sb-feedback="emailAddress:email">Geçersiz Email.</div>
                            </div>

                            <!-- Message Input -->
                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="message" name="message" type="text" placeholder="Mesajınız" style="height: 10rem;" data-sb-validations="required" required></textarea>
                                <label for="message">Mesajınız</label>
                                <div class="invalid-feedback" data-sb-feedback="message:required">Mesaj gereklidir.</div>
                            </div>

                            <!-- Submit success message -->
                            <div class="d-none" id="submitSuccessMessage">
                                <div class="text-center mb-3">
                                    <div class="fw-bolder">Form gönderildi!</div>
                                </div>
                            </div>

                            <!-- Submit error message -->
                            <div class="d-none" id="submitErrorMessage">
                                <div class="text-center text-danger mb-3">Mesaj gönderilemedi!</div>
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg " id="submitButton" type="submit">Gönder</button>
                            </div>
                        </form>
                        <!-- End of contact form -->

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
